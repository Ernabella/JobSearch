<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carolsusieo.jobsearch.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Search Application"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Data"
        android:id="@+id/buttonEnterData"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/buttonDisplayData"
        android:layout_alignEnd="@+id/buttonDisplayData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="enterData" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Display Data"
        android:id="@+id/buttonDisplayData"
        android:layout_below="@+id/buttonEnterData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="viewData" />


</RelativeLayout>
